<div class="well col-lg-5">
  <%= form_tag "/", method: :get, class: "form-horizontal" do %>
    <fieldset>
      <legend>मतदार शोध</legend>
        <div class="form-group">
          <div class="col-lg-5 pull-left">
            <%= text_field_tag :search, params[:search], class: "form-control search-world", id: "autocomplete" %>
          </div>
            <div class="clearfix"></div>
        </div>
          <%= submit_tag "Submit", class: "btn btn-primary", value: "शोधा" %>
    </fieldset>
  <% end %>
</div>
<div class="col-lg-5 well">
  <div class="table-responsive">
    <table class="table table-hover table-striped matadar-table">
      <caption class="bagawa">मतदार यादी(<%= @matadars.count %>)</caption>
      <thead>
        <tr>
          <th style="font-size: 12px;">अ.क्र</th>        
          <th style="font-size: 12px;">मतदाराचे नाव</th>        
          <th style="font-size: 12px;">यादीतील अ.क्र</th>        
          <th style="font-size: 12px;">वय</th>        
        </tr>
      </thead>
      <tbody>
        <% @matadars.each_with_index do |m, idx| %>
        <tr>
          <td><%= idx + 1 %></td>
          <td class="prabhag-list"><%= m.name %></td>
          <td style="font-size: 20px;"><%= m.list_index %></td>
          <td><%= m.age %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>